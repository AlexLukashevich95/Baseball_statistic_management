<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BelarusBaseball" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">#464451</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.BelarusBaseball.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BelarusBaseball.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BelarusBaseball.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>